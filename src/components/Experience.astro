---
import ExperienceItem from "./ExperienceItem.astro";

const { i18n } = Astro.props;
const experienceList = i18n.experience?.items ?? [];
const ctaLabel = i18n.experience?.cta ?? "";
---

<div class="flex flex-col gap-y-16 relative">
  <div class="flex flex-col md:flex-row md:items-center md:space-x-8">
    <ol class="relative mt-16">
      {
        experienceList.map((experience: any) => (
          <li>
            <ExperienceItem {...experience} ctaLabel={ctaLabel} />
          </li>
        ))
      }
    </ol>
  </div>

  <style>
    img {
      mask-image: linear-gradient(black 70%, transparent);
    }
    strong {
      @apply text-red dark:text-redlight;
    }
  </style>
</div>
