// Determinamos el idioma al que queremos ir
const targetLang = lang === "es" ? "en" : "es";

// Reemplazamos el segmento del idioma actual con el nuevo
// Ejemplo: convierte "/es" en "/en" o "/es/proyectos" en "/en/proyectos"
const targetPath = url.pathname.replace(`/${lang}`, `/${targetLang}`);
