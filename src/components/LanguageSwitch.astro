---
const { url } = Astro;
const { lang = "es" } = Astro.params;

const targetLang = lang === "es" ? "en" : "es";
const currentPath = url.pathname.replace(new RegExp(`^/${lang}`), "");
const targetPath = `/${targetLang}${currentPath}${url.search}${url.hash}`;
---

<a
  href={targetPath}
  class="hover:scale-110 transition-transform mx-2 text-xl font-semibold"
  aria-label={lang === "es" ? "Switch to English" : "Cambiar a espaÃ±ol"}
>
  {targetLang.toUpperCase()}
</a>
